<%- include('../partials/head') %>
  <body >
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8  rounded-lg shadow-md max-w-2xl bg-gray-100">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800 border-b pb-4">Login Your Account</h1>
      <%- include('../partials/errors') %>
      <form action="/login" method="POST" class="max-w-md mx-auto">
 
        
    
        <!-- Email field -->
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
              <i class="fas fa-envelope"></i>
            </span>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= oldInput.email ? oldInput.email : '' %>"
              placeholder="your.email@example.com"
              class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
              required />
          </div>
        </div>
        
        <!-- Password fields -->
        <div class="mb-4">
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
              <i class="fas fa-lock"></i>
            </span>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Enter Your Password"
              class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
              required/>
          </div>
        </div>
        
        <!-- Submit button with animation -->
        <button type="submit" class="w-full bg-red-500 text-white py-3 rounded-md hover:bg-red-600 focus:ring-4 focus:ring-red-300 font-medium transition duration-300 flex items-center justify-center">
          <span>Login</span>
          <i class="fas fa-arrow-right ml-2"></i>
        </button>
        
        <!-- Login link -->
        <p class="text-center mt-4 text-gray-600">
          Don't have an account? <a href="/register" class="text-red-500 hover:underline">Registration</a>
        </p>
      </form>
    </main>
  </body>
</html>