<header class="text-gray-600 body-font">
  <div
    class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center justify-center"
  >
    <a
      href="/"
      class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0 cursor-pointer"
    >
      <img src="logo/logo.png" class="object-cover w-20 h-20" />
    </a>
    <nav
      class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center"
    >
      <a
        href="/"
        class="<%= currentPage === 'home' ? 'underline font-bold' : '' %> mr-5 hover:text-gray-900 cursor-pointer"
        >Home</a
      >
      <% if (userSession?.isLogin && userSession?.user?.userType === 'admin') { %>
          <% if (currentPage === 'add-book') { %>
            <a
              href="/add-book"
              class="underline font-bold mr-5 hover:text-gray-900 cursor-pointer"
            >Add Book</a>
          <% } else { %>
          <% if (currentPage === 'edit-book') { %>
              <a
              href="/add-book"
              class="underline font-bold mr-5 hover:text-gray-900 cursor-pointer"
            >Edit Book</a>
          <% } else { %>
            <a
             href="/add-book"
             class=" mr-5 hover:text-gray-900 cursor-pointer"
            >Add Book</a>
          <% } %>
              
          <% } %>

      <% } %>
   
      <a
        href="/add-to-cart-list"
        class="<%= currentPage === 'add-to-cart' ? 'underline font-bold' : '' %> mr-5 hover:text-gray-900 cursor-pointer"
        >Add To Cart</a
      >
   
    </nav>

    <div class="flex gap-2">
  
      <% if (userSession?.isLogin) { %>
        <div class="flex items-center mr-4 bg-white shadow rounded-lg px-3 py-2 transition-transform hover:scale-105">
          <div class="flex-shrink-0">
          <div class="w-10 h-10 bg-gradient-to-tr from-blue-400 to-purple-500 rounded-full flex items-center justify-center shadow-inner">
            <i class="fas fa-user text-white text-2xl"></i>
          </div>
          <p class="text-xs text-center mt-1  rounded-full bg-blue-100 text-blue-700  shadow">
            <%= userSession.user?.userType %>
          </p>
          </div>
          <div class="flex flex-col justify-center items-start ml-3">
            <span class="font-bold text-gray-900 text-base leading-tight">
              <%= userSession.user?.firstName %> <%= userSession.user?.lastName %>
            </span>
            <span class="text-xs text-gray-500 bg-gray-100 rounded px-2 py-0.5 mt-1">
              <%= userSession.user?.email %>
            </span>
          </div>
        </div>
        <button
          class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0"
        >
          <a href="/logout">Logout</a>
        </button>
      <% } else { %>
        <button
          class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0"
        >
          <a href="/login" class="<%= currentPage === 'login' ? 'font-bold' : '' %>">Login</a>
        </button>
        <button
        class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0"
      >
        <a href="/register" class="<%= currentPage === 'register' ? 'font-bold' : '' %>" >Register</a>
      </button>
      <% } %>





    </div>
  </div>
</header>
