<%- include('../partials/head') %>
<body >
  <%- include('../partials/nav') %>
  <main class="container mx-auto rounded-lg p-6 mt-8 max-w-2xl bg-white shadow-lg">
    <div class="flex flex-col md:flex-row items-center">
      <div class="w-full md:w-1/2 flex justify-center mb-6 md:mb-0">
        <img src="<%= book.image %>" alt="<%= book.name %>" class="rounded-lg shadow-md w-64 h-80 object-cover border-4 border-indigo-200">
      </div>
      <div class="w-full md:w-1/2 md:pl-8">
        <h1 class="text-3xl font-bold text-indigo-700 mb-2"><%= book.name %></h1>
        <p class="text-xl text-gray-800 font-semibold mb-4">$<%= book.price.toFixed(2) %></p>
        <p class="text-gray-700 mb-6"><%= book.description %></p>
        <div class="flex items-center space-x-4">
          <button class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded transition duration-200 shadow">
            Add to Cart
          </button>
          <button class="bg-gray-200 hover:bg-gray-300 text-indigo-700 font-semibold py-2 px-4 rounded transition duration-200">
            Add to Wishlist
          </button>
        </div>
        <p class="text-xs text-gray-400 mt-6">Added on <%= book.createdAt.toLocaleDateString() %></p>
      </div>
    </div>
  </main>
</body>
</html>