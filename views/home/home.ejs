<%- include('../partials/head') %>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto  rounded-lg p-3 mt-5 ">
      <div class="flex items-center justify-center mb-8">
        <hr class="flex-grow border-t-2 border-red-200 mr-4">
        <h2 class="text-3xl text-red-500 font-bold text-center">
          <span class="inline-block align-middle">All Books</span>
        </h2>
        <hr class="flex-grow border-t-2 border-red-200 ml-4">
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-5">
        <% books.forEach(book => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105">
  
           <div class="rounded-lg h-64 overflow-hidden">
          <img  class="object-cover object-center h-full w-full"  src="<%= book.image %>" 
              alt="<%= book.name %>">
        </div>
            <div class="p-4">
              <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= book.name %></h3>
              <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= book.description %></p>
              <div class="flex justify-between items-center">
                <span class="text-lg font-bold text-red-500">$<%= book.price %></span>
                <button class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition-colors">
                  <a href="/book/<%= book._id %>">
                    View Details
                  </a>
                  
                </button> 
              </div>
            </div>
          </div>
        <% }) %>
      </div>

    </main>
  </body>
</html>