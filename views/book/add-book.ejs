<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-10 p-8 rounded-lg shadow-lg max-w-2xl bg-white">
    <h1 class="text-3xl font-bold mb-8 text-center text-gray-800 border-b pb-4">Add a New Book</h1>
    <%- include('../partials/errors') %>
    <form action="/add-book" method="POST" enctype="multipart/form-data" class="space-y-6">
      <!-- Name -->
      <div>
        <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Book Name</label>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
            <i class="fas fa-book"></i>
          </span>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Book Title"
            value="<%= oldInput && oldInput.name ? oldInput.name : '' %>"
            class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
            required />
        </div>
      </div>
      <!-- Price -->
      <div>
        <label for="price" class="block text-sm font-semibold text-gray-700 mb-2">Price ($)</label>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
            <i class="fas fa-dollar-sign"></i>
          </span>
          <input
            type="number"
            id="price"
            name="price"
            placeholder="19.99"
            step="0.01"
            min="0"
            value="<%= oldInput && oldInput.price ? oldInput.price : '' %>"
            class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
            required />
        </div>
      </div>
      <!-- Description -->
      <div>
        <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
        <textarea
          id="description"
          name="description"
          rows="4"
          placeholder="Write a short description about the book..."
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition resize-none"
          required><%= oldInput && oldInput.description ? oldInput.description : '' %></textarea>
      </div>
      <!-- Image -->
      <div>
        <label for="image" class="block text-sm font-semibold text-gray-700 mb-2">Book Cover Image</label>
        <input
          type="file"
          id="image"
          name="image"
          accept="image/*"
          class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-red-50 file:text-red-700 hover:file:bg-red-100 transition cursor-pointer"
          required />
      </div>
      <!-- Submit Button -->
      <button type="submit" class="w-full bg-red-500 text-white py-3 rounded-md hover:bg-red-600 focus:ring-4 focus:ring-red-300 font-semibold text-lg transition duration-300 flex items-center justify-center gap-2">
        <span>Add Book</span>
        <i class="fas fa-plus"></i>
      </button>
    </form>
  </main>
</body>
</html>